<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colorAccentPressed"
                android:endColor="@color/colorAccentPressed"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorAccentPressed" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/colorAccentFocussed"
                android:startColor="@color/colorAccentFocussed"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorAccentFocussed" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/colorAccent"
                android:startColor="@color/colorAccent"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorAccent" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>